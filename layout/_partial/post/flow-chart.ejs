<script src="/js/jquery.min.js"></script>
<script src="/js/flowchart.min.js"></script>
            
<!--Import jQuery before materialize.js-->
<script type="text/javascript" src="/js/materialize.js"></script>

<script type="text/javascript">
    var opt = {
      // 'x': 30,
      // 'y': 50,
      'line-width': 3,
      'line-length': 50,
      'text-margin': 10,
      'font-size': 14,
      'font': 'normal',
      'font-family': 'Helvetica',
      'font-weight': 'normal',
      'font-color': 'black',
      'line-color': 'black',
      'element-color': 'black',
      'fill': 'white',
      'yes-text': 'yes',
      'no-text': 'no',
      'arrow-end': 'block',
      'scale': 1,
      'symbols': {
        'start': {
          'font-color': 'red',
          'element-color': 'green',
          'fill': 'yellow'
        },
        'end':{
          'class': 'end-element'
        }
      },
      'flowstate' : {
        'past' : { 'fill' : '#CCCCCC', 'font-size' : 12},
        'current' : {'fill' : 'yellow', 'font-color' : 'red', 'font-weight' : 'bold'},
        'future' : { 'fill' : '#FFFF99'},
        'request' : { 'fill' : 'blue'},
        'invalid': {'fill' : '#444444'},
        'approved' : { 'fill' : '#58C4A3', 'font-size' : 12, 'yes-text' : 'APPROVED', 'no-text' : 'n/a' },
        'rejected' : { 'fill' : '#C45879', 'font-size' : 12, 'yes-text' : 'n/a', 'no-text' : 'REJECTED' }
      }
    };

    jQuery.noConflict();
    jQuery(".code").each(function(i){
        var figure = jQuery(this).parents("figure.flow-chart,figure.flow");
        var code = jQuery(this)[0].innerText;  // NOTE: get the code first, otherwise the line break will be removed for some unknown reason.
        //console.log(code);
        var navHtml = '<nav class="nav-tabs">' +
            '<div class="nav-wrapper">' +
            '  <ul class="tabs tabs-transparent">' +
            '    <li class="tab"><a class="active" href="#flow-chart-diagram-' + (i + 1) + '">Diagram</a></li>' +
            '    <li class="tab"><a href="#flow-chart-code-' + (i + 1) + '">Code</a></li>' +
            '  </ul>' +
            '</div>' +
            '</nav>';

        figure.attr("id", "flow-chart-code-" + (i + 1));
        figure.before(jQuery(navHtml));
        figure.before(jQuery("<div id='flow-chart-diagram-" + (i + 1) + "' class='flow-chart'></div>"));
        //figure.hide();
        var chart = flowchart.parse(code);
        chart.drawSVG(figure.prev()[0], opt);
    });
</script>