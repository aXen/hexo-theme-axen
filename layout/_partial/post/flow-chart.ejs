<!--Import jQuery before materialize.js-->
<script type="text/javascript" src="/js/materialize.js"></script>

<script type="text/javascript">
  jQuery.noConflict();
  (function ($) {
      var opt = {
        // 'x': 30,
        // 'y': 50,
        'line-width': 3,
        'line-length': 50,
        'text-margin': 10,
        'font-size': 14,
        'font': 'normal',
        'font-family': 'Helvetica',
        'font-weight': 'normal',
        'font-color': 'black',
        'line-color': 'black',
        'element-color': 'black',
        'fill': 'white',
        'yes-text': 'yes',
        'no-text': 'no',
        'arrow-end': 'block',
        'scale': 1,
        'symbols': {
          'start': {
            'font-color': 'red',
            'element-color': 'green',
            'fill': 'yellow'
          },
          'end':{
            'class': 'end-element'
          }
        },
        'flowstate' : {
          'past' : { 'fill' : '#CCCCCC', 'font-size' : 12},
          'current' : {'fill' : 'yellow', 'font-color' : 'red', 'font-weight' : 'bold'},
          'future' : { 'fill' : '#FFFF99'},
          'request' : { 'fill' : 'blue'},
          'invalid': {'fill' : '#444444'},
          'approved' : { 'fill' : '#58C4A3', 'font-size' : 12, 'yes-text' : 'APPROVED', 'no-text' : 'n/a' },
          'rejected' : { 'fill' : '#C45879', 'font-size' : 12, 'yes-text' : 'n/a', 'no-text' : 'REJECTED' }
        }
      };

      $("figure.flow-chart .code,figure.flow .code").each(function(i){
          var figure = $(this).parents("figure.flow-chart,figure.flow");
          var code = $(this)[0].innerText;  // NOTE: get the code first, otherwise the line break will be removed for some unknown reason.
          var diagramId = "flow-chart-diagram-" + (i + 1);
          var codeId = "flow-chart-code-" + (i + 1);
          var navHtml = '<nav class="nav-tabs">' +
              '<div class="nav-wrapper">' +
              '  <ul class="tabs tabs-transparent">' +
              '    <li class="tab"><a class="active" href="#' + diagramId + '">Diagram</a></li>' +
              '    <li class="tab"><a href="#' + codeId + '">Code</a></li>' +
              '  </ul>' +
              '</div>' +
              '</nav>';

          //console.log(code);

          figure.attr("id", codeId);
          figure.before($(navHtml));
          figure.before($("<div id='" + diagramId + "' class='flow-chart'></div>"));
          //figure.hide();
          var chart = flowchart.parse(code);
          chart.drawSVG(figure.prev()[0], opt);
      });

      $(".code").each(function(i){
          var figure = $(this).parents("figure");
          figure.hover(function(){
            $(this).children(".copy-btn").show();
          }, function(){
            $(this).children(".copy-btn").hide();
          });
          var copyBtnHtml = '<div class="copy-btn" style="display:none; position: absolute;top: 10px;right: 10px;cursor: pointer;"><svg height="16" version="1.1" viewBox="0 0 14 16" width="14"><path fill-rule="evenodd" d="M2 13h4v1H2v-1zm5-6H2v1h5V7zm2 3V8l-3 3 3 3v-2h5v-2H9zM4.5 9H2v1h2.5V9zM2 12h2.5v-1H2v1zm9 1h1v2c-.02.28-.11.52-.3.7-.19.18-.42.28-.7.3H1c-.55 0-1-.45-1-1V4c0-.55.45-1 1-1h3c0-1.11.89-2 2-2 1.11 0 2 .89 2 2h3c.55 0 1 .45 1 1v5h-1V6H1v9h10v-2zM2 5h8c0-.55-.45-1-1-1H8c-.55 0-1-.45-1-1s-.45-1-1-1-1 .45-1 1-.45 1-1 1H3c-.55 0-1 .45-1 1z"></path></svg></div>';
          figure.append(copyBtnHtml);
      });


      function setClipboardText(event, value){
        if(event.clipboardData){  // don't work in chrome
          return event.clipboardData.setData("text/plain", value);
        }else if(window.clipboardData){
          return window.clipboardData.setData("text", value);
        }else {  // chrome supported
          var sel = getSelection();
          if(null != sel){
            sel.removeAllRanges();
          }
          var rang = document.createRange();
          rang.selectNodeContents($(event.currentTarget).prev().find(".code")[0]);
          sel.addRange(rang);
          document.execCommand("copy");
          sel.removeAllRanges();
        }
      };

      $(".copy-btn").click(function(event){
        setClipboardText(event, $(this).prev().text());
      });
  }( jQuery ));
</script>